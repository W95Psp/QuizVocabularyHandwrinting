html
	body
		width 100%
		font-family 'Open Sans', sans-serif
		margin 0px
		padding 0px
		background-color #ecf0f1 
		#head
			background-color #3498db
			padding 10px
			box-shadow 0px 0px 6px rgba(0, 0, 0, 0.4)
			h1
				padding 0px
			span
				display inline-block
				margin 4px
				padding 12px
				border 1px solid rgba(255, 255, 255, 0.2)
				color rgba(255, 255, 255, 0.6)
				font-size 20px
				cursor default
				&:hover
					border 1px solid rgba(255, 255, 255, 0.4)
					background-color rgba(0, 0, 0, 0.3)
					box-shadow 0px 0px 6px rgba(0, 0, 0, 0.5) inset
					color rgba(255, 255, 255, 1)
		div.drawZone
			box-shadow 0px 0px 6px rgba(0, 0, 0, 0.4)
			background-color white
			position relative
			display inline-block
			> div.controls
				position absolute
				top 10px
				right 10px
		#content
			float left
			width 830px
			padding 20px
			padding-top 0px
			h2
				padding 10px
				margin 0px
		#addPanel
			margin 40px
			padding 15px
			border 1px solid #DDD
			background-color white
			box-shadow 0px 0px 6px rgba(0, 0, 0, 0.2)
			width 380px
			float left
			table
				border-collapse collapse
				tr
					&:hover
						background-color #F7F7F7
					&[state=true]
						background-color #F0F0F0
					td
						margin 3px
						padding-top 8px
						padding-bottom 8px
						border 1px solid transparent
			.scroll
				text-align center
				height 600px
				overflow-y scroll
				overflow-x hidden
			img
				width 170px
		.rep
			width: 200px; margin-left: 140px;
			opacity 0.4
			&:hover
				opacity 1